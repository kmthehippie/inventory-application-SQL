<!DOCTYPE html>
<html lang="en">
  <%- include('header') %>
  <body>
    <div class="sidebar"><%- include('sidebar.ejs') %></div>
    <div class="main">
      <h1>Categories</h1>
      <% productCat.forEach(category => { %>
      <h2><%= category.category %></h2>
      <ul>
        <% productCat.filter(product => product.categoryid ===
        category.categoryid).forEach(product => { %>
        <li>
          <a href="/product/<%= product.productid %>"><%= product.name %></a>
        </li>
        <% }) %>
      </ul>
      <% }) %>
    </div>
  </body>
</html>
